	<bean name="sitemanageAction" class="monitor.action.SitemanageAction" scope="prototype"></bean>
	<bean name="maprouteAction" class="monitor.action.MaprouteAction" scope="prototype"></bean>
	<bean name="remoteNodeAction" class="monitor.action.RemotenodeAction" scope="prototype"></bean>
	<bean name="AjaxHandlerAction" class="monitor.action.AjaxAction" scope="prototype"></bean>
	<bean name="logsmanageAction" class="monitor.action.LogsmanageAction" scope="prototype"></bean>
